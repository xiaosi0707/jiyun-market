view,icon,text,input{
  box-sizing: border-box;
}
.head{
  width: 100%;
  height: 430rpx;
  position: relative;
}
.img{
  width: 100%;
  height: 100%;
}
.head-cont{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
  padding-top: 90rpx;
}
.cont-title{
  font-size: 43rpx;
  color: #fff;
  display: block;
  line-height: 70rpx;
}
.cont-stitle{
  font-size: 20rpx;
  color: #fff;
  display: block;
}
.cont-search{
  width: 100%;
  height: 100rpx;
  background: #fff;
  margin-top: 75rpx; 
  padding: 0rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.icon-sousuo{
  font-size: 35rpx;
  width: 50rpx;
}
.cont-txt{
  flex: 1;
  height: 100rpx;
  font-size: 27rpx;
  text-align: left;
  margin-left: 20rpx; 
}
.search-body{
  width: 100%;
  padding: 20rpx;
}


.best-cont{
  width: 100%;
  background: #fff;
  border-bottom: 2px solid #f0f0f0;
  border-radius: 20rpx; 
  margin: 30rpx 0rpx; 
  padding-bottom: 10rpx;
}
.cont-zhanye{
  width: 100%;
  font-size: 27rpx;
  color: #11d1bf;
  line-height: 52rpx;
  border-bottom: 1px solid #ebebeb;
  padding-left: 20rpx;
   display: flex;
  justify-content: space-between
}
.cont-text{
  font-size:23rpx;
  padding-left: 20rpx;
  line-height: 43rpx;
 }
.icon-banji{
  color: #009afc;
  font-size: 30rpx;
 padding-bottom: 18rpx;
}
.icon-xingming1{
  color: #11d1bf;
  font-size: 27rpx;
  padding-bottom: 20rpx;
}
.icon-xinzi{
  color: #10c157;
  font-size: 30rpx;
  padding-bottom: 17rpx;
}
.icon-hujidi{
  color: #b28850;
  font-size: 30rpx;
  padding-bottom: 20rpx;
}
.text-lei1{
  color: #999;
  padding-left: 20rpx;
}
.text-lei2{
  color: #000;
}
.dixian,.tishi{
  width: 100%;
  line-height: 120rpx;
  font-size: 30rpx;
  text-align: center;
  color: #b3b3b3;
}
