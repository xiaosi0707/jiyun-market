.textarea{
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #f1f1f1f1;
  font-size: 30rpx;
 }
 .messcont{
   width: 100%;
   background: #ffffff;
   position: fixed;
   top:200rpx;
   left: 0rpx;
   z-index: 2;
   padding: 60rpx;
 }
 .messcont textarea {
   font-size: 28rpx;
 }
 .messcont-head{
   width: 100%;
   font-size: 30rpx;
   display: flex;
   border-bottom: 1px solid #f1f1f1; 
   border-radius: 10rpx;
   padding: 20rpx 0rpx;
   justify-content: space-between;
   position: relative;
 }
 .messcont-head .off {
   border-top: 60rpx solid #eee;
   border-left: 60rpx solid transparent;
 }
 .messcont-head .off::after {
   content: 'X';
   display: block;
   position: absolute;
   right: 10rpx;
   top: 13rpx;
   color: rgb(209, 17, 17);
 }
 .messcont-body{
   width: 100%;
   height: 300rpx;
   border: 1px solid #f1f1f1;
   border-radius: 10rpx;
   margin: 40rpx 0rpx;
 }
.messcont-btn{
  font-size: 30rpx;
}